.side-bar
  .header
    .header__box
      %h3.header__box__name
        = current_user.name
      %ul.header__box__lists
        %li.list
          = link_to new_group_path do
            = icon('fa', 'edit',class: 'icon')
        %li.list
          = link_to edit_user_path(current_user) do
            = icon('fa', 'cog',class: 'icon')

  .groups
    -current_user.groups.each do |group|
      .group
        =link_to '#' do
          .group__name
            = group.name
          .group__message
            メッセージはまだありません
